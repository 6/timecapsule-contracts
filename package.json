{
  "name": "timecapsule-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "hardhat compile",
    "compile:watch": "nodemon --watch \"contracts/**\" --ext \"sol\" --exec \"yarn compile\"",
    "deduplicate": "yarn-deduplicate && yarn install",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:hardhat": "yarn deploy --network hardhat",
    "deploy:rinkeby": "yarn deploy --network rinkeby",
    "deploy:polygontestnet": "yarn deploy --network polygontestnet",
    "lint": "yarn lint:ts --cache && yarn lint:sol",
    "lint:ci": "yarn lint:ts && yarn lint:sol",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint . --ext .js,.ts,.json",
    "prettier:all": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|sol)\"",
    "security": "solium --dir contracts --no-soliumignore",
    "test": "jest --config test/jest.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:all"
    }
  },
  "dependencies": {
    "@ethereum-waffle/jest": "^3.3.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-async-without-await": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "ethlint": "^1.2.5",
    "hardhat": "^2.6.4",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.0",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solium-plugin-security": "^0.1.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "yarn-deduplicate": "^3.1.0"
  }
}
